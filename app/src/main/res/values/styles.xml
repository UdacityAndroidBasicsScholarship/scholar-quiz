<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="editTextStyle">
        <item name="android:background">@drawable/edittextdesign</item>
        <item name="android:fontFamily">@font/google_sans</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:ems">10</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="buttonStyle">
        <item name="android:background">@drawable/button_design</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">#fdfdfe</item>
        <item name="android:fontFamily">@font/google_sans_bold</item>
    </style>

    <style name="checkBoxStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="colorAccent">#4facfe</item>
    </style>
    <style name="titleWhiteMonospace">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">#fff9f9</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="forgotpwdbuttonStyle">
        <item name="android:background">@drawable/forgotpwdbuttondesign</item>
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#eff1ec</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.YellowStatusBar" parent="Theme.AppCompat.Light.NoActionBar" />
</resources>
